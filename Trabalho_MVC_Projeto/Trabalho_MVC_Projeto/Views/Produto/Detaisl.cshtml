@model Trabalho_MVC_Projeto.Models.ProdutoModel


@{
    ViewBag.Title = "Detalhe do Produto";
}

<br />
<div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
    Detalhe do Produto
</div>

<hr />

@using (Html.BeginForm())
{
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Detalhe do Produto</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Nome,
                                   htmlAttributes: new { @class = "bmd-label-floating" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Nome,
                                       new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Valor,
                                   htmlAttributes: new { @class = "bmd-label-floating" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Valor,
                                       new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Tipo_de_Produto,
                                   htmlAttributes: new { @class = "bmd-label-floating" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Tipo_de_Produto,
                                       new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Peso,
                                   htmlAttributes: new { @class = "bmd-label-floating" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Peso,
                                       new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Fornecedor.Nome
                                   htmlAttributes: new { @class = "bmd-label-floating" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Fornecedor.Nome,
                                       new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>

                            <br />

                            <a class="btn btn-light" href="~/Produto/Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>}
