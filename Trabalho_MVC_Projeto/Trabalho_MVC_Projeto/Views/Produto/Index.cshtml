@model IEnumerable<Trabalho_MVC_Projeto.Models.ProdutoModel>

@{ ViewBag.Title = "Listar Produtos"; }
@{string nivel = Session["Nivel"].ToString();}
<br />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Listagem de Produtos</h4>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            @*Datatable*@

                            <table class="table" id="sisDataTable">
                                <thead class=" text-primary">
                                    <tr>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Nome))</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Valor)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Tipo_de_Produto)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Peso)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Fornecedor.Nome)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Valor)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tipo_de_Produto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Peso)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                                                </td>
                                                @if(nivel.ToString() == "A")
                                                    {
                                                <td>

                                                    @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                                                    @Html.ActionLink("Detalhes", "Details", new { id = item.ID })
                                                    @Html.ActionLink("Apagar", "Delete", new { id = item.ID })
                                                </td>
                                                }
                                                    else
                                                    {
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                                                    @Html.ActionLink("Detalhes", "Details", new { id = item.ID })
                                                </td>
                                                }
                                            </tr>
                                        } }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                </p>
            </div>
        </div>
    </div>
</div>